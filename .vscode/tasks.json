{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++",
            "command": "/usr/bin/clang++-20",
            "args": [
                "-O3",
                "-std=c++26",
                "-Wall",
                "-pedantic",
                "-pthread",
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/out/${fileBasenameNoExtension}",
                "-L/usr/local/lib",
                "-lfmt",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}